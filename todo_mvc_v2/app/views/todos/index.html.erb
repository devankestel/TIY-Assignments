  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TodoMVC</title>
    <link rel="stylesheet" href="/index.css">
  </head>
  <body>
    
      <!-- This section should be hidden by default and shown when there are todos to display -->
      <% if @todos.any? %>
        <section id="main">
          <form action="/todos/toggle" method="POST">
            <input id="toggle-all" type="checkbox">
            <label for="toggle-all">Mark all as complete</label>
          </form>
          <% @todos.each do |todo| %>
            <ul id="todo-list">
              <!-- These are here just to show the structure of the list items -->
              <!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
              
              
                <!-- If this list item is being edited, the div.view can be omitted -->
                <% if !todo.editing %>
                  <li>
                    <div class="view">
                      <form action=<%= "/todos/#{todo.id}/complete" %> method="POST">
                        <input class="toggle" type="checkbox" <%= "checked" if todo.complete? %>>
                      </form>
                      <a href=<%="todos/#{todo.id}/edit"%>> <%= "#{todo.title}" %> </a>
                      <form action=<%= "/todos/#{todo.id}/destroy" %> method="POST">
                        <button class="destroy"></button>
                      </form>
                    </div>
                  </li>
                <% else %>
                  <!-- The following form should appear only if this list item is being edited -->
                  <li class="editing">
                    <form action=<%= "/todos/#{todo.id}/update" %> method="POST">
                      <!--<p><strong> <%= todo.title %> </strong></p>-->
                      <input class="edit" name="title" value= <%= "'#{todo.title}'" %>>
                    </form>
                  </li>
                <% end %>
              
            </ul>
          <% end %>
        </section>
        <!-- This footer should hidden by default and shown when there are todos -->
        <footer id="footer">
          <!-- This should be `0 items left` by default -->
          <span id="todo-count"><strong><%= @todos_left %></strong> items left</span>
          <ul id="filters">
            <li>
              <a class="selected" href="/todos">All</a>
            </li>
            <li>
              <%= link_to "Active", todos_active_path%>
            </li>
            <li>
              <%= link_to "Completed", todos_completed_path%>
            </li>
          </ul>
          <!-- Hidden if no completed items are left ↓ -->
          <form action="/todos/completed/clear" method="POST">
            <button id="clear-completed">Clear completed</button>
          </form>
        </footer>
      
    <% end %>
    
    <!-- Scripts here. Don't remove ↓ -->
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="/app.js"></script>post 'todos/create' => 'todos#create'